{
  "name": "yuyanlsp",
  "displayName": "yuyanlsp",
  "description": "",
  "version": "0.0.1",

  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yuyan"
  ],
  "main": "./extension.js",
  "contributes": {
      "configuration": {
        "title": "Yuyan",
        "properties": {
          "yuyan.executablePath": {
            "type": "string",
            "default": "yy",
            "description": "Path of the yuyan implementation `yy`. "
          },
          "yuyan.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "verbose",
            "description": "Traces the communication between VS Code and the language server."
          }
        }
      },
      "languages": [
        {
          "id": "yuyan",
          "extensions": [
            ".yuyan"
          ],
          "aliases": ["Yuyan"]
        }
      ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
